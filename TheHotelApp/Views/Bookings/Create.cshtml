@model TheHotelApp.Models.BookingAddModel

<h4>Hall Booking Agreement</h4>
<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Book.AgreementNumber"  class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Book.AgreementNumber" class="form-control" />
                    <span asp-validation-for="Book.AgreementNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Book.CustomerID" class="col-sm-4 col-form-label">Customer Name<span style="color: red;">*</span></label>
                <div class="col-sm-8">
                    <select asp-for="Book.CustomerID" class="form-control">
                        <option value="0">Select Room</option>
                        @foreach (var item in Model.LstCustomers)
                        {
                            <option value="@item.ID">@item.CustomerName.ToString() </option>
                        }

                    </select>
                </div>
                </div>
            <div class="form-group row">
                <label asp-for="Book.CustomerID" class="col-sm-4 col-form-label">Phone<span style="color: red;">*</span></label>
                <div class="col-sm-8">
                    <select asp-for="Book.CustomerID" class="form-control">
                        <option value="0">Select Number</option>
                        @foreach (var item in Model.LstCustomers)
                        {
                            <option value="@item.ID">@item.CustomerPhone.ToString() </option>
                        }

                    </select>
                    </div>
                </div>
            </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label asp-for="Book.RentalDate" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Book.RentalDate" class="form-control" type="date" />
                    <span asp-validation-for="Book.RentalDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Book.ApplicantName" class="col-sm-4 col-form-label">Applicant Name<span style="color: red;">*</span></label>
                <div class="col-sm-8">
                    <input asp-for="Book.ApplicantName" class="form-control" />
                    <span asp-validation-for="Book.ApplicantName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Book.Address" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Book.Address" class="form-control" />
                    <span asp-validation-for="Book.Address" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label asp-for="Book.RoomID" class="col-sm-4 col-form-label">Hall Name<span style="color: red;">*</span></label>
                <div class="col-sm-8">
                    <select asp-for="Book.RoomID" class="form-control">
                        <option value="0">Select Hall</option>
                        @foreach (var room in Model.LstRoom)
                        {
                            <option value="@room.ID">@room.HallName.ToString() </option>
                        }

                    </select>
                </div> 
            </div>
            <div class="form-group row">
                <label asp-for="Book.Price" class="col-sm-4 col-form-label">Price|Taka<span style="color: red;">*</span></label>
                <div class="col-sm-8">
                    <input asp-for="Book.Price" class="form-control" />
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">

                <label asp-for="Book.Status" class="col-sm-4 col-form-label">Status</label>
                <div class="col-sm-8">
                    <input asp-for="Book.Status" class="col-sm-1 checkbox" />
                    <label class="form-check-label" for="gridCheck">
                        Check me If you paid
                    </label>
                    <span asp-validation-for="Book.Status" class="text-danger col-sm-9"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Book.Subject" class="col-sm-4 col-form-label">Subject</label>
                <div class="col-sm-8">
                    <input asp-for="Book.Subject" class="form-control" />
                    <span asp-validation-for="Book.Subject" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label asp-for="Book.RentalPeriod" class="col-sm-4 col-form-label">Rental Period<span style="color: red;">*</span></label>
                <div class="col-sm-8">
                    <input asp-for="Book.RentalPeriod" class="form-control" />
                    <span asp-validation-for="Book.RentalPeriod" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Book.ChiefGuests" class="col-sm-4 col-form-label">ChiefGuests</label>
                <div class="col-sm-8">
                    <input asp-for="Book.ChiefGuests" class="form-control" />
                    <span asp-validation-for="Book.ChiefGuests" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Book.SpeciaGuests" class="col-sm-4 col-form-label">SpeciaGuests</label>
                <div class="col-sm-8">
                    <input asp-for="Book.SpeciaGuests" class="form-control" />
                    <span asp-validation-for="Book.SpeciaGuests" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Book.ApplicationDate" class="col-sm-4 col-form-label">ApplicationDate</label>
                <div class="col-sm-8">
                    <input asp-for="Book.ApplicationDate" class="form-control" type="date" />
                    <span asp-validation-for="Book.ApplicationDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label asp-for="Book.PaymentID" class="col-sm-4 col-form-label">Payment Type</label>
                <div class="col-sm-8">
                    <select asp-for="Book.PaymentID" class="form-control">
                        <option value="0">Select Payment</option>
                        @foreach (var Pay in Model.LstPayments)
                        {
                            <option value="@Pay.PaymentID">@Pay.PaymentType.ToString() </option>
                        }

                    </select>
                </div>
                
            </div>
        </div>    
        <div class="col-md-6">
            <div class="form-group row">
                <label asp-for="Book.PaymentDate" class="col-sm-4 col-form-label">PaymentDate</label>
                <div class="col-sm-8">
                    <input asp-for="Book.PaymentDate" class="form-control" type="date" />
                    <span asp-validation-for="Book.PaymentDate" class="text-danger"></span>
                </div>
            </div>
        </div>
       
    </div>
                
                <div class="form-group">
                    <input type="reset" value="Reset" class="btn btn-default" />
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
