@model TheHotelApp.Models.BookingEditModel

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.ID" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Book.AgreementNumber" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.AgreementNumber" class="form-control" />
                            <span asp-validation-for="Book.AgreementNumber" class="text-danger"></span>
                         </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Book.CustomerID" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Book.CustomerID" class="form-control" asp-items="Model.LstCustomers"></select>
                            <span asp-validation-for="Book.CustomerID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Book.RentalDate" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.RentalDate" class="form-control" type="date" />
                            <span asp-validation-for="Book.RentalDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Book.RentalPeriod" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.RentalPeriod" class="form-control" />
                            <span asp-validation-for="Book.RentalPeriod" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Book.ApplicantName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.ApplicantName" class="form-control" />
                            <span asp-validation-for="Book.ApplicantName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Book.Address" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.Address" class="form-control" />
                            <span asp-validation-for="Book.Address" class="text-danger"></span>
                        </div>
                     </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Book.RoomID" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Book.RoomID" class="form-control" asp-items="Model.LstRoom"></select>
                            <span asp-validation-for="Book.RoomID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Book.TypeID" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Book.TypeID" class="form-control" asp-items="Model.LstRoomTypes"></select>
                            <span asp-validation-for="Book.TypeID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Book.Price" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.Price" class="form-control" />
                            <span asp-validation-for="Book.Price" class="text-danger"></span>
                        </div>
                    </div>
                        <div class="form-group row">
                            <div class="col-sm-8">
                                <input asp-for="Book.Status" class="col-sm-1 checkbox" />
                                <label class="col-sm-4 col-form-label">
                                    @Html.DisplayNameFor(model => model.Book.Status)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Book.ApplicationDate" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.ApplicationDate" class="form-control" />
                            <span asp-validation-for="Book.ApplicationDate" class="text-danger"></span>
                         </div>
                    </div>
                 
                        <div class="form-group row">
                            <label asp-for="Book.ChiefGuests" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Book.ChiefGuests" class="form-control" />
                                <span asp-validation-for="Book.ChiefGuests" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Book.SpeciaGuests" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Book.SpeciaGuests" class="form-control" />
                                <span asp-validation-for="Book.SpeciaGuests" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Book.Subject" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Book.Subject" class="form-control" />
                                <span asp-validation-for="Book.Subject" class="text-danger"></span>
                            </div>
                        </div>
                    
                 </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Book.PaymentID" class="col-sm-4 col-form-label"></label>
                          <div class="col-sm-8">
                            <select asp-for="Book.PaymentID" class="form-control" asp-items="Model.LstPayments"></select>
                            <span asp-validation-for="Book.PaymentID" class="text-danger"></span>
                          </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Book.PaymentDate" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Book.PaymentDate" class="form-control" />
                            <span asp-validation-for="Book.PaymentDate" class="text-danger"></span>
                         </div>
                     </div>
                </div>
            </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

